<div class="max-w-md mx-auto mt-12 p-6 bg-white rounded shadow-md space-y-4 font-sans">
  <h1 class="text-2xl font-bold">Criar Novo Time</h1>

  <%= form_with(model: @team, local: true) do |f| %>
    <div class="mb-4">
      <%= f.label :name, "Nome do Time", class: "block font-medium mb-1" %>
      <%= f.text_field :name, class: "w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-400" %>
    </div>

    <div>
      <%= f.submit "Criar Time", class: "bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600" %>
    </div>
  <% end %>

  <div>
    <%= link_to "Voltar para Home", root_path, class: "text-blue-600 hover:underline" %>
  </div>
</div>
